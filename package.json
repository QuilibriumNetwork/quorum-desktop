{
  "name": "quorum-desktop",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "mobile"
  ],
  "main": "web/electron/main.cjs",
  "type": "module",
  "build": {
    "extends": null,
    "files": [
      "dist/**/*",
      "web/electron/**/*"
    ]
  },
  "scripts": {
    "dev": "vite --config web/vite.config.ts",
    "build": "vite build --config web/vite.config.ts",
    "build:preview": "yarn build && yarn preview --config web/vite.config.ts",
    "electron:dev": "NODE_ENV=development electron web/electron/main.cjs",
    "electron:build": "yarn build && electron-builder",
    "lint": "eslint .",
    "validate": "tsc --noEmit && eslint .",
    "preview": "vite preview --config web/vite.config.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lingui:extract": "lingui extract",
    "lingui:compile": "lingui compile",
    "scan-docs": "node src/dev/docs/utils/scanMarkdownFiles.cjs",
    "test": "vitest",
    "test:run": "vitest --run",
    "mobile": "cd mobile && expo start --dev-client",
    "mobile:tunnel": "cd mobile && expo start --dev-client --tunnel",
    "mobile:clear": "cd mobile && expo start --dev-client --clear",
    "mobile:android": "cd mobile && expo start --dev-client --android",
    "mobile:ios": "cd mobile && expo start --ios",
    "mobile:web": "cd mobile && expo start --web",
    "mobile:build": "cd mobile && expo run:android"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@expo/metro-runtime": "^5.0.4",
    "@iden3/js-crypto": "^1.1.0",
    "@lingui/babel-plugin-lingui-macro": "^5.3.3",
    "@lingui/cli": "^5.3.3",
    "@lingui/react": "^5.3.3",
    "@lingui/vite-plugin": "^5.3.3",
    "@quilibrium/quilibrium-js-sdk-channels": "^2.1.0-2",
    "@quilibrium/quorum-shared": "2.1.0-2",
    "@tabler/icons-react": "^3.35.0",
    "@tanstack/react-query": "^5.62.7",
    "assert": "^1.1.1",
    "base58-js": "^2.0.0",
    "browserify-zlib": "~0.1.4",
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "compressorjs": "^1.2.1",
    "crypto-browserify": "^3.12.1",
    "dns.js": "^1.0.1",
    "domain-browser": "^1.1.1",
    "electron-is-dev": "^3.0.1",
    "emoji-datasource-apple": "^15.1.2",
    "emoji-picker-react": "^4.12.0",
    "events": "^3.3.0",
    "https-browserify": "~0.0.0",
    "linkifyjs": "^4.2.0",
    "minisearch": "^7.1.2",
    "moment-timezone": "^0.5.46",
    "multiformats": "^13.3.1",
    "path-browserify": "0.0.0",
    "process": "^0.11.10",
    "punycode": "^1.2.4",
    "qrcode.react": "^4.2.0",
    "qs": "^6.13.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-dropzone": "^14.3.5",
    "react-markdown": "^10.1.0",
    "react-native-web": "^0.20.0",
    "react-router": "^7.0.2",
    "react-router-dom": "^7.0.2",
    "react-tooltip": "^5.29.1",
    "react-virtuoso": "^4.12.3",
    "readable-stream": "^4.7.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "sass": "^1.89.2",
    "stream-browserify": "^1.0.0",
    "string_decoder": "~0.10.25",
    "strip-markdown": "^6.0.0",
    "timers-browserify": "^1.0.1",
    "tty-browserify": "0.0.0",
    "typescript-eslint": "^8.48.1",
    "url": "~0.10.1",
    "util": "^0.12.5",
    "vite-plugin-static-copy": "^2.2.0",
    "vm-browserify": "0.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-basic-ssl": "^1.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "babel-plugin-macros": "^3.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "fake-indexeddb": "^6.2.2",
    "globals": "^15.12.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prismjs": "^1.30.0",
    "sass-embedded": "^1.83.0",
    "tailwindcss": "^3.4.16",
    "unenv": "^1.10.0",
    "vite": "^6.0.1",
    "vite-plugin-favicons-inject": "^2.2.0",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vitest": "^2.1.8"
  },
  "resolutions": {
    "@quilibrium/quilibrium-js-sdk-channels": "^2.1.0-2"
  }
}
